{
  "name": "you-dont-need-useless-dom",
  "version": "1.5.0",
  "packageManager": "pnpm@8.7.0",
  "description": "There is a lot of dom that we may not wanna look at.",
  "keywords": [
    "Chrome",
    "Extension"
  ],
  "author": "Leedom92",
  "license": "MIT",
  "repository": "https://github.com/leedom92/You-Dont-Need-Useless-Dom",
  "scripts": {
    "output:dev": "npx @tailwindcss/cli -i ./input.css -o ./extension/css/output.css --watch",
    "output:prod": "npx @tailwindcss/cli -i ./input.css -o ./extension/css/output.css --minify",
    "lint": "eslint .",
    "release": "bumpp",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "extension/**/*.{js,json}": "eslint --fix"
  },
  "dependencies": {
    "tailwindcss": "^4.0.15"
  },
  "devDependencies": {
    "@leedomjs/eslint-config-basic": "^0.12.3",
    "bumpp": "^10.1.0",
    "eslint": "^8.57.1",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1"
  }
}
